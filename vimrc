set nocompatible

" Backspace
set backspace=2

" Syntax highlighting
syntax on

" Autoindent
set autoindent

" Line number
set number

" Theme
colorscheme delek

" Always show position
set ruler

" Highlight search results
set hlsearch

" Use spaces instead of tabs
set expandtab

" Be smart when using tabs
set smarttab

" 1 tab == 2 spaces
set shiftwidth=2
set tabstop=2